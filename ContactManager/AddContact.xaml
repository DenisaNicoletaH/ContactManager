<Window x:Class="ContactManager.AddContact"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ContactManager"
        mc:Ignorable="d"
        Title="AddContact" Height="450" Width="800">
    <Grid ShowGridLines="True">
        <Grid.ColumnDefinitions>
            <ColumnDefinition/>
            <ColumnDefinition/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
        </Grid.RowDefinitions>
        
        <Label Grid.Row="0">First Name</Label>
        <Label Grid.Row="1">Last Name</Label>
        <Label Grid.Row="2">Middle Name</Label>
        <Label Grid.Row="3">Active</Label>
        <Label Grid.Row="4">Image Id</Label>

        <TextBox x:Name="tb1"  Grid.Column="1" Grid.Row="0"></TextBox>
        <TextBox x:Name="tb2" Grid.Column="1" Grid.Row="1"></TextBox>
        <TextBox x:Name="tb3" Grid.Column="1" Grid.Row="2"></TextBox>
        <TextBox x:Name="tb4" Grid.Column="1" Grid.Row="3"></TextBox>
        <TextBox x:Name="tb5" Grid.Column="1" Grid.Row="4"></TextBox>

        <Button x:Name="Cancel" Grid.Row="7" Click="Cancel_Click">
            <Viewbox>
                <Label>Cancel</Label>
            </Viewbox>
        </Button>
        <Button x:Name="Save" Grid.Row="7" Grid.Column="1" Click="Save_Click">
            <Viewbox>
                <Label>Save</Label>
            </Viewbox>
        </Button>

    </Grid>
</Window>
